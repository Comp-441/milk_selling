<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MakeSale</servlet-name>
        <servlet-class>controller.employee.clerk.MakeSale</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddClerck</servlet-name>
        <servlet-class>controller.employee.manager.AddClerck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduce</servlet-name>
        <servlet-class>controller.production.AddProduce</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalesController</servlet-name>
        <servlet-class>com.sales.controller.SalesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProduction</servlet-name>
        <servlet-class>controller.production.ViewProduction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCow</servlet-name>
        <servlet-class>controller.cow.addNewCow.AddCow</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RetrieveSales</servlet-name>
        <servlet-class>com.sales.controller.RetrieveSales</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>loginController.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cowsReportController</servlet-name>
        <servlet-class>controller.production.cowsReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewEmployees</servlet-name>
        <servlet-class>controller.employee.manager.viewEmployees</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MakeSale</servlet-name>
        <url-pattern>/MakeSale</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddClerck</servlet-name>
        <url-pattern>/AddClerck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduce</servlet-name>
        <url-pattern>/AddProduce</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalesController</servlet-name>
        <url-pattern>/SalesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProduction</servlet-name>
        <url-pattern>/ViewProduction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCow</servlet-name>
        <url-pattern>/AddCow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RetrieveSales</servlet-name>
        <url-pattern>/RetrieveSales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cowsReportController</servlet-name>
        <url-pattern>/cowsReportController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewEmployees</servlet-name>
        <url-pattern>/viewEmployees</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
